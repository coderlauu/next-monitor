{
    // nestjs 官方推荐配置
    "compilerOptions": {
        "module": "CommonJS",
        // 生成d.ts文件
        "declaration": true,
        // 移除注释
        "removeComments": true,
        // 生成装饰器元数据
        "emitDecoratorMetadata": true,
        // 启用装饰器
        "experimentalDecorators": true,
        // 允许合成默认导入
        "allowSyntheticDefaultImports": true,
        // 构建的产物标准
        "target": "ES2021",
        // 源码映射
        "sourceMap": true,
        // 增量编译
        "incremental": true,
        // 跳过库检查
        "skipLibCheck": true,
        // 严格空值检查
        "strictNullChecks": false,
        // 不隐式any
        "noImplicitAny": false,
        // 严格绑定、调用、应用
        "strictBindCallApply": false,
        // 强制一致的文件名大小写
        "forceConsistentCasingInFileNames": false,
        // 不截断switch
        "noFallthroughCasesInSwitch": false
    }
}
